general {
    no_fade_in = false
    grace = 0
    disable_loading_bar = true
}

background {
    monitor =
    # Берет текущее изображение экрана
    path = screenshot
    
    # Настройка размытия (blur)
    blur_passes = 3 # Чем выше, тем сильнее размытие (2-4 оптимально)
    blur_size = 7
    noise = 0.0117
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
}

input-field {
    monitor =
    size = 250, 50
    outline_thickness = 3
    dots_size = 0.2
    dots_spacing = 0.15
    dots_center = true

    # Полупрозрачное меню
    outer_color = rgba(0, 0, 0, 0) # Прозрачная обводка
    inner_color = rgba(255, 255, 255, 0.1) # Полупрозрачный белый фон (0.1 - степень прозрачности)
    font_color = rgb(200, 200, 200)
    
    fade_on_empty = true
    placeholder_text = <i>Введите пароль...</i>
    hide_input = false
    
    position = 0, -20
    halign = center
    valign = center

    # Цвет при ошибке или фокусе
    check_color = rgba(204, 136, 34, 0.5)
    fail_color = rgba(204, 34, 34, 0.5)
}

label {
    monitor =
    text = $TIME
    color = rgba(255, 255, 255, 0.6)
    font_size = 64
    font_family = Sans
    position = 0, 80
    halign = center
    valign = center
}

